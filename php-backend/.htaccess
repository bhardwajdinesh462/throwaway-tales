# TempMail PHP Backend - Apache Configuration
# Security-hardened for production use

# Enable RewriteEngine
RewriteEngine On

# Block suspicious requests and scanners
RewriteCond %{HTTP_USER_AGENT} (sqlmap|nikto|nessus|nmap|hydra|acunetix|burp|dirbuster|gobuster|wpscan|zmeu|w00tw00t) [NC,OR]
RewriteCond %{QUERY_STRING} (union.*select|select.*from|insert.*into|drop.*table|delete.*from|update.*set|cast.*\(|exec\(|execute\(|xp_cmdshell|cmdshell) [NC,OR]
RewriteCond %{QUERY_STRING} (\.\.\/|\.\.\\|%2e%2e%2f|%2e%2e\/|\.%2e\/|%2e\.\/|\.\.\%2f) [NC,OR]
RewriteCond %{QUERY_STRING} (<|>|'|%0A|%0D|%27|%3C|%3E|%00) [NC,OR]
RewriteCond %{REQUEST_URI} (\.php\.|\.asp|\.aspx|\.jsp|\.cgi|\.exe|\.dll|\.bak|\.old|\.orig|\.sql|\.tar|\.zip|\.gz|\.rar|\.7z) [NC]
RewriteRule .* - [F,L]

# Block access to sensitive files
<FilesMatch "^(config\.php|config\.example\.php|\.env|composer\.json|composer\.lock|schema\.sql|\.htpasswd|\.htaccess|\.git|install\.php\.bak|README\.md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect log files and directories
<FilesMatch "\.log$">
    Order allow,deny
    Deny from all
</FilesMatch>

RedirectMatch 403 ^/api/logs/.*$
RedirectMatch 403 ^/api/cron/.*$
RedirectMatch 403 ^/api/storage/.*$

# Allow SSE endpoint
RewriteRule ^sse/?$ sse.php [QSA,L]

# Handle CORS preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Redirect all requests to index.php except for real files/directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Security Headers
<IfModule mod_headers.c>
    # CORS Headers (origin will be set dynamically by PHP)
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Authorization, Content-Type, Accept, X-Requested-With, X-Temp-Email-Id, X-Secret-Token"
    Header always set Access-Control-Max-Age "3600"
    
    # Security Headers
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https:; connect-src 'self' https:; frame-ancestors 'none'"
    
    # Remove server signature
    Header always unset X-Powered-By
    Header always unset Server
    
    # Disable caching for API responses
    <FilesMatch "\.(php)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# Disable directory listing
Options -Indexes -FollowSymLinks +SymLinksIfOwnerMatch

# Disable server signature
ServerSignature Off

# PHP Configuration
<IfModule mod_php8.c>
    php_value max_execution_time 300
    php_value memory_limit 256M
    php_value post_max_size 50M
    php_value upload_max_filesize 50M
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log "logs/error.log"
    php_flag expose_php Off
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 1
    php_value session.cookie_samesite "Strict"
</IfModule>

# Enable gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/json text/plain text/html application/javascript text/css
</IfModule>

# Set correct content type for JSON
<IfModule mod_mime.c>
    AddType application/json .json
</IfModule>

# Increase timeout for SSE connections
<IfModule mod_reqtimeout.c>
    RequestReadTimeout header=20-40,MinRate=500 body=20,MinRate=500
</IfModule>

# Handle SSE streaming - disable output buffering
<Files "sse.php">
    <IfModule mod_php8.c>
        php_value output_buffering Off
        php_value zlib.output_compression Off
        php_value implicit_flush On
    </IfModule>
</Files>

# Protect install.php after installation (handled by .install_lock check in PHP)
# Install.php should be deleted after setup
