# Main .htaccess for Self-Hosted Temp Email

RewriteEngine On
RewriteBase /

# Handle API requests - route to api folder
RewriteCond %{REQUEST_URI} ^/api/
RewriteCond %{REQUEST_URI} !/api/router\.php$
RewriteRule ^api/(.*)$ api/router.php [L,QSA]

# Allow direct access to PHP files (prevents redirect loop)
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} \.php$
RewriteRule ^ - [L]

# Allow direct access to specific admin PHP files
RewriteRule ^install\.php$ - [L]
RewriteRule ^setup-wizard\.php$ - [L]
RewriteRule ^health-dashboard\.php$ - [L]
RewriteRule ^settings\.php$ - [L]
RewriteRule ^analytics\.php$ - [L]
RewriteRule ^cron-manager\.php$ - [L]
RewriteRule ^admin-users\.php$ - [L]
RewriteRule ^admin-domains\.php$ - [L]

# Handle SPA routing for React frontend
# Don't rewrite files or directories that exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Don't rewrite API calls
RewriteCond %{REQUEST_URI} !^/api/

# Don't rewrite PHP files
RewriteCond %{REQUEST_URI} !\.php$

# Avoid rewriting index.html to itself (prevents internal redirect loops)
RewriteCond %{REQUEST_URI} !/index\.html$

# Serve index.html for all other requests (SPA routing)
RewriteRule . index.html [L]

# Enable GZIP compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Deny access to hidden files
<FilesMatch "^\.">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# Deny access to sensitive files
<FilesMatch "(\.sql|\.md|\.json|\.lock|\.env)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>
